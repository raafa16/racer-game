<div class="container">
  <h2>Leader Board</h2>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>Score</th>
    </tr>
    </thead>
    <tbody>
      <% @scores.each_with_index do |score, index|%>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= score.name %></td>
          <td><%= score.score_count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>